<h1>All Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <% if task.completed == true %>
        <input type = "checkbox" checked>
        <%= link_to task.title, task_path(task) %>
        <%= link_to "Delete", task_path(task),
        method: :delete,
        data: { confirm: "Are you sure?" } %>
      <% else %>
        <input type = "checkbox">
        <%= link_to task.title, task_path(task) %>
        <%= link_to "Delete", task_path(task),
        method: :delete,
        data: { confirm: "Are you sure?" } %>
      <% end %>
    </li>
  <% end %>
</ul>

<%= link_to "+ Add a new task", new_task_path %>



